




<% if flash[:notice] %> 
  <p><%= flash[:notice] %></p>
<% end %>


<div class="container">
	<div class="row">
  		<div class="col-xs-3">
  	<%= render 'users/list',{user:current_user} %>
  	 <%= render 'newbook',book:@book %>
 		</div>

		<div class="col-xs-9">
			 <h1>Books</h1>
			<table class="table table-striped">
          	<thead>
            <tr>
              <th>
              </th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          	</thead>

          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
              <%= link_to user_path(book.user) do %>
 			<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
              <% end %>
              </td>
              <td>
                <%=link_to book.title, book_path(book), class: "book_#{book.id}" %>
              </td>
              <td>
                <%= book.body %>
              </td>


    <% end %>

  </tr>
</tbody>
</table>

		</div>
	</div>
</div>