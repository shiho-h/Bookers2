<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>



<div class="container">
  <div class="row">
      <div class="col-xs-3">
    <%= render 'users/list',{user:current_user} %>
     <%= render 'books/newbook',book:@book %>
      </div>

      <div class="col-xs-9">
      <table class="table table-striped">
        <h1>Users</h1>
          <thead>
            <tr>
              <th>Image</th>
              <th>name</th>
            </tr>
          </thead>

          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                 <div><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format:'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></div>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show",user_path(user), class: "user_#{user.id}" %>
              </td>
            </tr>
          </tbody>
          <% end %>
      </table>

      </div>
  </div>
</div>