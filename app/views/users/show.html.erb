<div class="container">
  <div class="row">
      <div class="col-xs-3">
    <%= render 'users/list',{user:current_user} %>
    <%= render 'books/newbook',book:@book %>
      </div>

      <div class="col-xs-9">
      <table class="table table-striped">

        <h1>Books</h1>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
           <% @books.each do |book| %>
                <tbody>
                  <tr>
                    <td>
                      <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format:'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
                    </td>
                    <td>
                <%=link_to book.title, book, class: "book_#{book.id}" %>
                    </td>
                    <td>
                      <%= book.body %>
                    </td>

              <td>
              <% if book.favorited_by?(current_user) %>

              <%= link_to book_favorites_path(book), method: :delete do %>

              <%= book.favorites.count %> <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
              <% end %>

              
              <% else %>
              <%= link_to book_favorites_path(book), method: :post do %>
              <%= book.favorites.count %>  <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
              <% end %>
              <% end %>
              </td>


              <td>
              <div class="comment-list bt style-2" id="comments">
              <div class="float-wrapper">
              <h5 class="comment-count"><%= book.book_comments.count %>件コメント</h5>
              </div>
              </div>
              </td>

                   <% end %>
                  </tr>
                </tbody>

      </table>
          </div>
    </div>
  </div>
    <footer>

    		<p>CopyRight Infratop.inc</p>
  
</footer>




