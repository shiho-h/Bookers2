<div class="container">
  <div class="row">
      <div class="col-xs-3">
    <%= render 'users/list',{user:current_user} %>
    <%= render 'books/newbook',book:@book %>
      </div>

      <div class="col-xs-9">
      <table class="table table-striped">

        <h1>Books</h1>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
           <% @books.each do |book| %>
                <tbody>
                  <tr>
                    <td>
                      <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format:'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
                    </td>
                    <td>
                <%=link_to book.title, book, class: "book_#{book.id}" %>
                    </td>
                    <td>
                      <%= book.body %>
                    </td>

                   <% end %>
                  </tr>
                </tbody>

      </table>
          </div>
    </div>
  </div>
    <footer>

    		<p>CopyRight Infratop.inc</p>
  
</footer>




